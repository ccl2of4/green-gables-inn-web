<div class="row">
  <div class="col-md-3">
    <h3 class="suite-name-lg">Room Booking</h3>
    <h4>{{model.name}}</h4>
    <span class="suite-price">${{model.price}}</span> Per Night
  </div>

  <div class="col-md-12">
    <hr/>
  </div>
</div>

<div class="row">

  <div class="col-md-3">
    <form>
      {{gg-datepickers checkinDate=reservation.checkinDate checkoutDate=reservation.checkoutDate}}
      <div class="form-group">
        <label class="sr-only" for="full-name">Full Name</label>
        {{input type="text" value=reservation.fullName class="form-control" id="full-name" placeholder="Full Name"}}
      </div>
      
      <div class="form-group">
        <label class="sr-only" for="number-of-people">Number of People</label>
        {{input type="text" value=reservation.numberOfPeople class="form-control" id="number-of-people" placeholder="Number of People"}}
      </div>

      <div class="form-group">
        <label class="sr-only" for="email">Email Address</label>
        {{input type="text" value=reservation.email class="form-control" id="email" placeholder="Email Address"}}
      </div>

      <div class="form-group">
        <label class="sr-only" for="phone">Phone Number</label>
        {{input type="text" value=reservation.phone class="form-control" id="phone" placeholder="Phone Number"}}
      </div>

      <div class="form-group">
        <label class="sr-only" for="comments">Special Requirements</label>
        {{textarea value=reservation.comments class="form-control" rows="5" id="comments" placeholder="Special Requirements"}}
      </div>

      <button {{action 'submit'}} type="submit" class="btn btn-primary book-suite-btn">Book Now</button>
    </form>
  </div>

</div>
