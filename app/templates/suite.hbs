<div class="row">
  <div class="col-md-12">
    <h3 class="suite-name-lg">{{model.name}}</h3>
    <hr/>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    {{gg-slideshow images=slideshowImages}}
  </div>

  <div class="col-md-6">
    <h3>Room Description</h3>
    <hr/>
    <p>{{model.summary}}</p>
    <hr/>

    <div class="row">
      {{gg-book-suite suite=model reservedDates=reservedDates}}
    </div>

    <div>
      <h3>Amenities Include:</h3>
      <div class="well well-sm">
        <ul class="amenities-list">
          {{#each model.amenities as |amenity|}}
            <li>{{amenity}}</li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>
