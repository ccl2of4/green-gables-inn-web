<div class="row">
  <div class="col-md-12">
    <h3 class="suite-name-lg">{{model.name}}</h3>
    <hr/>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    {{gg-slideshow images=slideshowImages}}
  </div>

  <div class="col-md-6">
    <h3>Room Description</h3>
    <hr/>
    <p>{{model.summary}}</p>
    <hr/>

    <div class="row">
      <div class="col-md-6">
        <span class="suite-price">${{model.price}}</span>
        <br/>Per Night
      </div>

      <div class="col-md-6">
        <h4 class="suite-name-sm">
          {{model.name}}
        </h4>
        {{gg-datepickers suite=model reservedDates=reservedDates}}
        {{#link-to 'booking' model}}
          <button class="btn btn-primary book-suite-btn">Book Now</button>
        {{/link-to}}
      </div>
    </div>

    <div>
      <h3>Amenities Include:</h3>
      <div class="well well-sm">
        <ul class="amenities-list">
          {{#each model.amenities as |amenity|}}
            <li>{{amenity}}</li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>
